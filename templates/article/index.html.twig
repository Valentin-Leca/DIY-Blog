{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Article_name</th>
                <th>Article_content</th>
                <th>Article_author</th>
                <th>Article_date</th>
                <th>Article_like</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.articleName }}</td>
                <td>{{ article.articleContent }}</td>
                <td>{{ article.articleAuthor }}</td>
                <td>{{ article.articleDate ? article.articleDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.articleLike }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}">Create new</a>
{% endblock %}
